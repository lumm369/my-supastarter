{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["./modules/ui/*"],
      "@saas/*": ["./modules/saas/*"],
      "@i18n": ["./modules/i18n"],
      "@config": ["./config"],
      "@shared/*": ["./modules/shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
